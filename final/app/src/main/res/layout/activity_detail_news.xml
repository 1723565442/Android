<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNewsActivity">


    <ImageButton
        android:id="@+id/back_button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_200"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="672dp"
        android:maxLines="2"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView00000"
        android:layout_width="389dp"
        android:layout_height="540dp"
        android:text="\n\n\n\n\n\n\n\n#暴雨红色预警继续发布#\n  【#河北河南局地现特大暴雨#】据@中国气象局 ，气象监测显示，过去一天，河北石家庄、邢台、邯郸，河南新乡、安阳、鹤壁等地局地特大暴雨（250至389毫米），其中河北邢台局地累计雨量达479.6毫米、山西晋城局地438.4毫米。另外，山东局地出现雷暴大风、冰雹。中央气象台7月30日10时继续发布暴雨红色预警。注意安全！"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rainy_day"
        android:alpha="0.5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp" />


</androidx.constraintlayout.widget.ConstraintLayout>